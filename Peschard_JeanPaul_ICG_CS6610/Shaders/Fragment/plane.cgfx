#version 330 core

out vec4 FragColor;

uniform sampler2D samplerPlane; 
uniform mat4 reflectedMvp;

in vec3 positionInModelSpace;

void main()
{
	vec4 positionInClipSpace = reflectedMvp * vec4(positionInModelSpace,1.0);
	vec2 uv = positionInClipSpace.xy / positionInClipSpace.w * 0.5 + 0.5;
	
	FragColor = texture(samplerPlane, uv);
}